<%
   wowzaURL = grab_wowza_url(obj.file_name,obj.id) if !obj.nil?
%>

<% if wowzaURL != nil %>

  <div id="dmr-audio">Loading the player...</div>

	<script type="text/javascript">
		jwplayer("dmr-audio").setup({
			playlist:
			[{
				sources:
				[
					{file: "http://<%=wowzaURL%>/playlist.m3u8"},				
					{file: "http://<%=wowzaURL%>/manifest.mpd"}
				]
			}],
			width: "100%",
			height: "30",
			rtmp: {bufferlength: 3},
			analytics: {enabled: false}
		});
	</script>

<% end %>