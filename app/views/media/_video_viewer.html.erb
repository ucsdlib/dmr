<%
   wowzaURL = grab_wowza_url(obj.file_name,obj.id) if !obj.nil?
%>

<% if wowzaURL != nil %>

  <video controls="controls" id="dar-video">Loading the player...</video>

	<script type="text/javascript">
		jwplayer("dar-video").setup({
			playlist:
			[{
				sources:
				[
					{file: "http://<%=wowzaURL%>/manifest.mpd"},
					{file: "http://<%=wowzaURL%>/playlist.m3u8"}
				]
			}],
			width: "100%",
			height: "100%",
			aspectratio: "16:9",
			rtmp: {bufferlength: 3},
			analytics: {enabled: false},
            hlshtml: true			
		});
	</script>

<% end %>