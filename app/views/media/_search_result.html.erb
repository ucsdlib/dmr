<%= bootstrap_form_for :course, url: add_to_course_courses_path do |f| %>
  <div class="container">
    <div class="row">
      <div class="panel panel-default">
        <table class="table table-striped table-hover table-bordered">
          <thead>
            <tr>
              <th class="col-xs-1"><%= check_box_tag 'check_all',false%></th>
              <th class="col-xs-1"></th>
              <th class="col-xs-4">Title</th>
              <th class="col-xs-2">Director</th>
              <th class="col-xs-2">Call Number</th>
              <th class="col-xs-1">Year</th>
              <th class="col-xs-1">File Name</th>
            </tr>
          </thead>
          <tbody>
            <% obj.each do |m| %>
              <% thumbnailURL = "#{Rails.configuration.file_path}#{m.file_name.gsub('.mp4','.jpg')}"%>
              <tr>
                <td><%= check_box_tag 'media_ids[]', m.id %></td>
                <td><%=image_tag "#{thumbnailURL}", :alt => '', :class => 'search-thumbnail' %></td>          
                <td><%= link_to "#{m.title}", edit_medium_path(m.id)%></td>
                <td><%= m.director %></td>
                <td><%= m.call_number %></td>
                <td><%= m.year %></td>
                <td><%= m.file_name %></td>
              </tr>
            <% end %>
          <tbody>
        </table>
      </div>
    </div>
  </div>
 <div class="text-center">
    <%= f.primary "Add to Course Reserve List"%> 
  </div>
  <div class="text-center">
    <%= link_to "Create New Media Record", new_medium_path, class: "btn btn-primary"%>
  </div>  
<% end %>  