<div class="container">
  <div class="row">
    <div class="col-sm-10">
	  <h3>Course Reserve List</h3>
      <%= render :partial => 'shared/error_messages' , :locals => {:obj => @course}%>
      <p class="required">* Required field </p>
	  
      <%= bootstrap_form_for @course, :required=>true do |f| %>
	    <%= render :partial => 'form' , :locals => {:f => f}%>
	    <div class="center-block">
	      <%= f.primary "Save"%>
	      <%= link_to "Delete", @course, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-primary"%>
	      <%= link_to "Clone", courses_path, class: "btn btn-primary"%>
	      <%= link_to "View", course_path(@course), class: "btn btn-primary"%>
	      <%= link_to "Send List", courses_path, class: "btn btn-primary"%>
	      <%= link_to "Set Current Course", set_current_course_courses_path(:id => "#{@course.id}"), class: "btn btn-primary"%>
	    </div>
	    <%= render :partial => 'media_view' , :locals => {:f => f}%>
	  <%end%>
    </div>
  </div>
</div>