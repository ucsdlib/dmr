<% if @course.audioreports and @course.audioreports.size > 0 %>
  <% counter = 0 %>
  <table class="table table-striped table-hover table-bordered">
    <thead>
      <tr>
        <th class="col-xs-1" scope="col"><%= label_tag 'check_all', 'check_all', class: "hide-label"%><%= check_box_tag 'check_all',false%></th>
        <th class="col-xs-1" scope="col">No</th>
        <th class="col-xs-3" scope="col">Track<%=link_to (image_tag "sorting_icon.png",  alt: '', class: 'sorting'), sort_courses_path(course_id: @course, type: 'audio', column: 'track'), 'data-no-turbolink' => true  %></th>
        <th class="col-xs-2" scope="col">Album<%=link_to (image_tag "sorting_icon.png",  alt: '', class: 'sorting'), sort_courses_path(course_id: @course, type: 'audio', column: 'album'), 'data-no-turbolink' => true  %></th>
        <th class="col-xs-2" scope="col">Call Number<%=link_to (image_tag "sorting_icon.png",  alt: '', class: 'sorting'), sort_courses_path(course_id: @course, type: 'audio', column: 'call_number'), 'data-no-turbolink' => true  %></th>
        <th class="col-xs-1" scope="col">Year<%=link_to (image_tag "sorting_icon.png",  alt: '', class: 'sorting'), sort_courses_path(course_id: @course, type: 'audio', column: 'year'), 'data-no-turbolink' => true  %></th>
        <th class="col-xs-1" scope="col">File Name<%=link_to (image_tag "sorting_icon.png",  alt: '', class: 'sorting'), sort_courses_path(course_id: @course, type: 'audio', column: 'file_name'), 'data-no-turbolink' => true  %></th>
      </tr>
    </thead>
    <tbody>	
      <% sorted_audio.each do |m| %>
        <% counter += 1 %> 
        <tr>
          <td><fieldset><legend class="hide-label">Type</legend><%= label_tag "media_ids_#{m.id}", 'media_ids[]', class: "hide-label"%><%= check_box_tag 'media_ids[]', m.id, false, id: "media_ids_#{m.id}"%></fieldset></td>
          <td><%= counter %></td>          
          <td><%= m.track %></td>
          <td><%= m.album %></td>        
          <td><%= m.call_number %></td>
          <td><%= m.year %></td>
          <td><%= m.file_name %></td>
        </tr>
      <% end %>  
    <tbody>
  </table>    
  <div class="center-block">
    <%= hidden_field_tag 'type', 'audio' %>
    <%= f.submit "Remove Item(s)", class: "btn btn-primary"%>
    <%= f.submit "Move Up One", class: "btn btn-primary"%>
    <%= f.submit "Move Down One", class: "btn btn-primary"%>
  </div>  
<% end %>  	    
